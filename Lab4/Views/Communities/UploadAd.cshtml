@model Lab4.Models.ViewModels.FileInputViewModel
@{
    ViewData["Title"] = "Upload";
    var cid = Html.ValueFor(model => model.CommunityId);
}

<h1>Upload</h1>

<h4>Upload an add for community @Html.DisplayFor(model => model.CommunityTitle)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UploadF" asp-route-id="@cid" enctype="multipart/form-data">
            <input type="hidden" id="@cid" name="@cid" />
            <div class="form-group">
       
                <div class="btn btn-sm float-left">
                    <input name="file" type="file">
                </div>
            </div>

            <div class="form-group">

                <button name="upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

